<script>



    var serialNumber = '1234765';

    function send_random_readings() {
      console.info('Sendning random reading data')
      var pulse_reading = {
        serial_number: serialNumber,
        value: Math.floor(Math.random() * 120),
        sensor: 'pulse'
      }

      var spo2_reading = {
        serial_number: serialNumber,
        value: Math.floor(Math.random() * 90),
        sensor: 'spo2'
      }

      var movement_reading = {
        serial_number: serialNumber,
        value: Math.floor(Math.random() * 100),
        sensor: 'movement'
      }

      $.ajax({
        url: '/readings',
        method: 'POST',
        data: spo2_reading,
        success: function(data) {
          console.log(data);
        }
      })

      $.ajax({
        url: '/readings',
        method: 'POST',
        data: movement_reading,
        success: function(data) {
          console.log(data);
        }
      })

      $.ajax({
        url: '/readings',
        method: 'POST',
        data: pulse_reading,
        success: function(data) {
          console.log(data);
        }
      })

    }

    setInterval(send_random_readings, 1000);


</script>